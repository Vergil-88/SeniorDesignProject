# X= ((uwb.x)/400)*9
# Y= ((uwb.y)/400)*9


S = TCPLink.TCP_init()
TCPLink.send(S,0,0)
TCPLink.receive(S,False)
TCPLink.send(S,0,0)
TCPLink.receive(S,False)


prevCntR=TCPLink.cntR_int
prevCntL=TCPLink.cntL_int

if prevCntR > 4500:
    prevCntR-=9000

if prevCntL > 4500:
    prevCntL -=9000

TCPLink.send(S,0,0)

distance , steer = calc_dis_ang(0,0,2,1)

start_time = time.time()

timee = 0

X = 0
Y = 0 

x=0
y=0

Pi=0

prv_time = time.time()
while True:
     
     TCPLink.receive(S,True) 

     cntR_int=TCPLink.cntR_int
     cntL_int=TCPLink.cntL_int

     dAvg = dist_calc(cntR_int,cntL_int)


     new_time=time.time()

     dT=new_time-prv_time

     prv_time = new_time

     X , Y = XY_gen(dT)
    #  Pi += 0.10*dT

    #  print(Pi)



     print("cntR_int= ", cntR_int )
     print("cntL_int= ", cntL_int )

     print("prevCntR= ", prevCntR )
     print("prevCntL= ", prevCntL )

     print("dAvg= ", dAvg )


     gyro_Angle=Comm.angle_values

     print("G    ",gyro_Angle)

     print("D    ",distance)

    #  if (gyro_Angle>=45):
          
    #       steer = 0
     
     timee = time.time() - start_time

     x , y = XY_gen(timee)

     X += x
     Y += y

     print("X" , X , "Y", Y )

     if (dAvg >= 166*distance): #and (gyro_Angle>=90):
          TCPLink.send(S, 0, 0)
          print(timee)
          print("X= ",X," Y= ",Y)
          break
     else:
          TCPLink.send(S, 10, steer)
          
          

